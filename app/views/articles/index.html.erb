<h1>Articles</h1>

<p>Count: <%= @articles.count -%></p>

<p><%= link_to "New", new_article_path -%></p>

<p>Recent articles:</p>

<%- if @articles.any? -%>
  <ul>
    <%- @articles.each do |article| -%>
      <li>
        <b><%= article.id -%></b> - <%= article.text -%>
        <%= link_to("Edit", edit_article_path(article.id)) -%> |
        <%= link_to("Drop", article_path(article.id), data: { turbo_method: :delete, turbo_confirm: "Sure?" }) -%>
      </li>
    <%- end -%>
  </ul>
<%- else -%>
  <p>None</p>
<%- end -%>
